# 2% random chance of running update when creating a new shell
if [[ $[RANDOM % 50 + 1] == 1 ]]; then
	${ZDOTDIR:-$HOME}/.zprezto/update-prezto.pl
fi

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
export EDITOR=vim
export VISUAL=vim

alias v=vim -p

mack() { ack "$*" `perl -e '$a = qx('pwd'); $a =~ s/app.*/app/xms; print "$a/$_ " foreach(qw(models views controllers libs));'` }
alias ds="dstat -cdngym --top-bio-adv --top-cpu-adv --top-io"

path=($HOME/bin $path)

export AHM_SIMPLE_DEBUG=1
